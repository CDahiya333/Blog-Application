<div class="author">
    <h1 class="author-heading">Hi, I am Chirag</h1>
    <p class="author-body">Developer & Content Creator</p>
</div>
<div>
<img src="img/AesthticBackgroundShot.png" alt="Picture of a person standing infront of a Grass Wall" class="hero-image" width="981" height="500">
</div>
<section>
    <h2 class="article_headings">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(posts=> { %>
         
        <li>
            <a href="/post/<%= posts._id %>">
                <span><%= posts.title  %></span>
                <span class="article-list_date"><%= posts.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>


    </ul>
</section>
<section>
    <!-- Pagination Buttons  -->
    <div class="pagination-container">
        <div class="flex-left">

            <% if (nextPage!== null) { %>
                <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
            <% } %>
            
        </div>
        <div class="flex-right">
            <% if (prevPage!== null) { %>
                <a href="/?page=<%= prevPage %>" class="pagination">View Newer Posts&gt;</a>
            <% } %>

        </div>
    </div>
</section>